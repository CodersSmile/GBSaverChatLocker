<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/apphabet_text"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/circularview"
            android:gravity="center"
            android:textColor="@color/whiteTheme"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/textView_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/lock"
            android:layout_toEndOf="@+id/apphabet_text"
            android:text=""
            android:textAppearance="@style/TextAppearance.MyApp.Body1"
            android:textColor="@color/blackTheme" />

        <CheckBox
            android:id="@+id/lock"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/delete"
            android:button="@drawable/locker_selector"
            android:checked="true" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:padding="@dimen/_5dp"
            android:src="@drawable/ic_baseline_delete_24" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/_6dp"
        android:background="@color/blackTheme" />
</LinearLayout>
