<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/_4dp">

    <TextView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_48dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_gradiant"
        android:backgroundTint="#E1E1E1"
        android:gravity="center"
        android:paddingStart="@dimen/_40dp"
        android:paddingEnd="@dimen/_40dp"
        android:text="1"
        android:textAppearance="@style/TextAppearance.MyApp.Headline6"
        android:textColor="@color/blackTheme" />

    <ImageView
        android:id="@+id/mIvErase"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_48dp"
        android:paddingStart="@dimen/_40dp"
        android:paddingEnd="@dimen/_40dp"
        android:src="@drawable/ic_erase" />
</LinearLayout>
